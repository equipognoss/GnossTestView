@using Es.Riam.Gnoss.Web.MVC.Models;
@model ManageViewsViewModel
@if (Model != null)
{ 
    <fieldset class="mediumLabels">
        <legend id="lgndPestanya">Plantillas del servicio de facetas</legend>
        <div class="fieldsetContent">
            <div id="plantillasServicioFacetas">
                <div class="vistaEdicion">
                    <p>Estás viendo las páginas editadas</p>
                    <p>
                        <a href="#" class="mostrarOriginal">Mostrar las páginas originales</a>
                    </p>
                    <p>
                        Selecciona la página editada a personalizar
            <select name="PaginaFacetas" class="edicionFacetas nombreFich">
                @foreach (string vista in Model.ListEditedFacetedServiceViews)
                {
                    <option value="@vista">@vista.Replace("/Views/CargadorFacetas/", "")</option>
                }
            </select>
                    </p>
                    <p class="inputEdicionFacetas">
                        <label>Selecciona el HTML personalizado</label>
                        <input type="file" class="edicionFacetas" name="Fichero" />
                    </p>
                    <div class="fieldset actionButtons fieldset03 actionButtons">
                        <fieldset>
                            <p>
                                <input type="submit" action="@((short)ManageViewsViewModel.Action.Download)" idActualizar="#plantillasServicioFacetas .vistaEdicion" form="edicionFacetas" urlAction="@Model.UrlActionFacets" class="actionView" value="Descargalo!" />
                                <input type="submit" action="@((short)ManageViewsViewModel.Action.Upload)" idActualizar="#plantillasServicioFacetas .vistaEdicion" form="edicionFacetas" urlAction="@Model.UrlActionFacets" class="actionView" value="Súbelo!" />
                                <input type="submit" action="@((short)ManageViewsViewModel.Action.Delete)" idActualizar="#plantillasServicioFacetas .vistaEdicion" form="edicionFacetas" urlAction="@Model.UrlActionFacets" class="actionView showConfirm" value="Elimina la personalización" />
                            </p>
                        </fieldset>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.OKMessage))
                    {
                        <div class="ok">
                            <p>@Model.OKMessage</p>
                        </div>
                    }

                    <div class="ko">
                    </div>
                </div>
                <div class="vistaOriginal">
                    <p>Estás viendo las páginas originales</p>
                    <p><a href="#" class="mostrarEdicion">Mostrar las páginas editadas</a></p>
                    <p>
                        Selecciona la página original a personalizar
            <select name="PaginaFacetas" class="originalFacetas nombreFich">
                @foreach (string vista in Model.ListOriginalFacetedServiceViews)
                {
                    <option value="@vista">@vista.Replace("/Views/CargadorFacetas/", "")</option>
                }
            </select>
                    </p>
                    <p>
                        <label>Selecciona el HTML personalizado</label>
                        <input type="file" name="Fichero" class="originalFacetas" />
                    </p>
                    <div class="fieldset actionButtons fieldset03 actionButtons">
                        <fieldset>
                            <p>
                                <input type="submit" action="@((short)ManageViewsViewModel.Action.Upload)" idActualizar="#plantillasServicioFacetas .vistaOriginal" form="originalFacetas" urlAction="@Model.UrlActionFacets" class="actionView" value="Sobreescribe el original!" />
                            </p>
                        </fieldset>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.OKMessage))
                    {
                        <div class="ok">
                            <p>@Model.OKMessage</p>
                        </div>
                    }

                    <div class="ko">
                    </div>
                </div>

            </div>
        </div>
    </fieldset>
}
