        init: function (fila, anchoColumna) {
            var anchoUsado = 0;
            $('.col', fila).each(function(){
                var aux = $(this).attr('aux').split(' ')[0].trim();
                var anchoCol = eval('control.' + aux);
                anchoUsado += anchoCol;
                anchoUsado += margen;
            });

            if (anchoMaximo - anchoUsado >= anchoColumna) {
                if ((anchoMaximo - (anchoUsado + anchoColumna)) <= margen) {
                    isBreak = true;
                } else {
                    isBreak = false;
                }
                return true;
            }
            return false;
        }
