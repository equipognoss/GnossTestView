                            html += "<label class=\"enLinea\">Valor</label><input type=\"text\" value=\"" + valor + "\" class=\"text medium enLinea valor\">";
                            html += "<input type=\"button\" onclick=\"$(this).parent().remove()\" value=\"Eliminar\" class=\"enLinea\"></p>";
