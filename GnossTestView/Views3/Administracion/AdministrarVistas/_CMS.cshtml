                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.OKMessage))
                                    {
                                        <div class="ok">
                                            <p>@Model.OKMessage</p>
                                        </div>
                                    }
                                    <div class="ko">
                                    </div>
                                </div>
                                
                                
                                
