@model List<FacetaModel.FiltrosFacetas>

@if (Model.Count == 0)
{
    <p><a class="linkEditarFiltros">Crear Filtros</a></p>
}

<section class="editarFiltro" @Html.Raw(Model.Count == 0 ? "style=\"display:none\"" : "")>
    <p>Filtros de la Faceta</p>
    <ol class="filtroSortable">
        @foreach (FacetaModel.FiltrosFacetas filtro in Model)
        {
            @Html.PartialView("_FichaFiltro", filtro);
        }
    </ol>
    <input type="button" value="Añadir Filtro" class="addFiltro" />
</section>



